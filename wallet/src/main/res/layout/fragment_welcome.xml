<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"

    tools:context="com.lkrcoin.wallet.ui.WelcomeFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:padding="@dimen/zero_margin"
        android:src="@drawable/mesa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/welcome_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_gravity="center|bottom"
            android:layout_weight=".5"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/create_wallet"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@color/primary_501"
                android:gravity="center"
                android:text="@string/create_wallet" />

            <Button
                android:id="@+id/restore_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#000"
                android:text="@string/restore_wallet"
                android:textColor="#fff" />

            <Button
                android:id="@+id/test_wallet"
                android:layout_width="@dimen/intro_button_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/test_wallet"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>



